# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_me_immediately
GRAFANA_URL=http://localhost:3000

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_RETENTION_HOURS=200
PROMETHEUS_MAX_DISK_SIZE=10GB

# Alertmanager Configuration
ALERTMANAGER_URL=http://localhost:9093

# Slack/Discord Webhook (optional)
# SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK
# DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/WEBHOOK

# RustChain Node
RUSTCHAIN_NODE_URL=http://localhost:8099
RUSTCHAIN_METRICS_PATH=/metrics

# Email Alerts (optional)
# ALERT_EMAIL=admin@rustchain.org
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# System Metrics (optional, if using node_exporter)
NODE_EXPORTER_URL=http://localhost:9100
